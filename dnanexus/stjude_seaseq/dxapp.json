{
  "name": "seaseq",
  "title": "SEAseq (St. Jude)",
  "summary": "Single-End Antibody sequencing workflow",
  "dxapi": "1.0.1",
  "version": "2.1.0",
  "openSource" : true,
  "inputSpec": [
    {
      "name": "sample_fastq",
      "label": "Sample FASTQs",
      "class": "array:file",
      "optional": true,
      "help": "Upload one or more sample FASTQ files.",
      "patterns": [
        "*.fq.gz",
        "*.fastq.gz"
      ]
    },
    {
      "name": "control_fastq",
      "label": "Control FASTQs",
      "class": "array:file",
      "optional": true,
      "help": "Upload one or more input/control FASTQ files.",
      "patterns": [
        "*.fq.gz",
        "*.fastq.gz"
      ]
    },
    {
      "name": "genome",
      "label": "Host Genome",
      "class": "string",
      "choices": ["GRCh37/hg19", "GRCh38/hg38", "GRCm38/mm10", "MGSCv37/mm9", "Custom Genome, specify as input"],
      "optional": false,
      "help": "Select from built-in list of genomes. Otherwise, select Custom Genome and provide 'Genome Reference' and 'Gene Annotation'."
    },
    {
      "name": "reference",
      "label": "Genome Reference",
      "class": "file",
      "optional": true,
      "help": "Reference FASTA file. Required if Host Genome is Custom",
      "patterns": [
        "*.fa",
        "*.fa.gz",
        "*.fasta",
        "*.fasta.gz"
      ]
    },
    {
      "name": "gtf",
      "label": "Gene Annotation",
      "class": "file",
      "optional": true,
      "help": "Input gene annotation file from RefSeq or GENCODE (.gtf). Required if Host Genome is Custom",
      "patterns": [
        "*.gff",
        "*.gtf",
        "*.gff3",
        "*.gff.gz",
        "*.gtf.gz",
        "*.gff3.gz"
      ]
    },
    {
      "name": "blacklist",
      "label": "Blacklist Regions",
      "class": "file",
      "optional": true,
      "help": "If defined, blacklist regions listed are excluded after reference alignment.",
      "patterns": [
        "*.bed",
        "*.bed.gz"
      ]
    },
    {
      "name": "bowtie_index",
      "label": "Bowtie Indexes",
      "class": "array:file",
      "optional": true,
      "help": "If not defined, bowtie v1 index files are generated, will take a longer compute time.",
      "patterns": [
        "*.ebwt"
      ]
    },
    {
      "name": "motif_databases",
      "label": "Motif Database Matrix",
      "class": "array:file",
      "optional": true,
      "help": "Input one or more motif databases available from the MEME suite (https://meme-suite.org/meme/db/motifs).",
      "patterns": [
        "*.meme"
      ]
    },
    {
      "name": "sample_sraid",
      "label": "Sample SRRs",
      "class": "array:string",
      "optional": true,
      "help": "Input publicly available sample FASTQs (SRRs). Multiple SRRs are separated by commas (,). e.g. SRR12345678"
    },
    {
      "name": "control_sraid",
      "label": "Control SRRs",
      "class": "array:string",
      "optional": true,
      "help": "Input publicly available input/control FASTQs (SRRs). Multiple SRRs are separated by commas (,). e.g. SRR12345678"
    },
    {
      "name": "results_name",
      "label": "Results File Name",
      "class": "string",
      "optional": true,
      "help": "Input preferred analysis results name (recommended if multiple FASTQs are provided)."
    }
  ],
